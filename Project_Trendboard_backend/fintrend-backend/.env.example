# ============================================
# FinTrend Backend Environment Configuration
# ============================================

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173
SHUTDOWN_TIMEOUT_MS=10000

# Firebase Configuration
FIRESTORE_PROJECT_ID=your-project-id
FIRESTORE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIRESTORE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"
FIRESTORE_COLLECTION=articles
FIRESTORE_RETENTION_DAYS=90
FIRESTORE_MAX_RESULTS=200
ENRICHMENT_QUEUE_COLLECTION=enrichmentQueue

# Finnhub API Configuration
FINNHUB_API_KEY=your-finnhub-api-key
FINNHUB_BASE_URL=https://finnhub.io/api/v1
FINNHUB_TIMEOUT_MS=15000
FINNHUB_IPO_WINDOW_DAYS=30

# OpenRouter AI Configuration
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1/chat/completions
OPENROUTER_MODEL=meta-llama/llama-4-maverick:free
OPENROUTER_TEMPERATURE=0.2
OPENROUTER_MAX_TOKENS=350
OPENROUTER_TIMEOUT_MS=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_DEV_MAX=1000

# Cron Job Configuration
ENABLE_CRON=false
RUN_INITIAL_FETCH=false
NEWS_FETCH_CRON=0 */6 * * *
CRON_LOCK_TTL_MS=600000
CRON_BATCH_SIZE=5
CRON_BATCH_DELAY_MS=2000

# Analytics Configuration
ANALYTICS_CACHE_TTL_MS=60000

# Worker Configuration
ENRICH_POLL_INTERVAL_MS=3000
ENRICH_BATCH_SIZE=3

# Script Configuration
ALLOW_SCRIPTS=false
